<div><%=@l.errors.inspect%><div>
	<% if @l.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@l.errors.count, "Error") %> Summary:</h2>

      <ul>
      <% @l.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<h1>Sign Up</h1>
<div class="row">
	<div class="col-md-5">
<%=form_tag("/login/create",:method=>"post") do %>
 <div class="form-group">
<%=label_tag :Username %>
<%=text_field_tag :username ,nil,{:class=>"form-control"} %>
</div>
<div class="from-group">
 <%=label_tag :Password %>
 <%=password_field_tag :password ,nil,{:class=>"form-control"}%> <br>
</div>

<div class="from-group">
 <%=label_tag :ConfirmPassword %>
 <%=password_field_tag :password_confirmation,nil,{:class=>"form-control"}%> <br>
</div>


<div class="form-group">
<%=button_tag :SignUp ,:class=>"btn btn-success"%>
</div>
<% end %>
</div>
</div>
